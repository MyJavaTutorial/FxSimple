<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root type="javafx.scene.layout.BorderPane" prefHeight="320.0" prefWidth="480.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="fxsimple.FxSimple">
  <bottom>
    <Text fx:id="status" text="status bar" textAlignment="CENTER" BorderPane.alignment="BOTTOM_RIGHT" />
  </bottom>
  <center>
    <VBox fillWidth="true"  spacing="10.0">
      <TextField fx:id="txtOne" prefWidth="100.0" text="JavaFX" />
      <TextField fx:id="txtTwo" prefWidth="100.0" />
      <TextArea fx:id="txtArea" prefHeight="100.0" prefWidth="150.0" wrapText="true" />
    </VBox>
  </center>
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
  <right>
    <VBox prefWidth="80.0" spacing="20" alignment="CENTER">
      <children>
        <Button alignment="CENTER" minHeight="30.0" minWidth="60.0" onAction="#actionOne" text="One" />
        <Button alignment="CENTER" minHeight="30.0" minWidth="60.0" onAction="#actionTwo" text="Two" />
      </children>
    </VBox>
  </right>
  <stylesheets>
    <URL value="@default.css" />
  </stylesheets>
  <top>
    <HBox alignment="CENTER" spacing="100.0">
      <ImageView fitHeight="100.0" mouseTransparent="true" pickOnBounds="true" preserveRatio="true">
        <image>
          <Image url="@bell.jpg" />
        </image>
      </ImageView>
      <Text id="title" opacity="0.75" rotate="6.0" text="FX Simple" textAlignment="CENTER" />
    </HBox>
  </top>
</fx:root>
